{# templates/user/profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>Mon profil</h1>
    <p>Email: {{ user.email }}</p>
    <p>Nom: {{ user.name }}</p>
    <p>Téléphone: {{ user.phoneNumber }}</p>
    <a href="{{ path('user_reserve') }}">Faire une réservation</a>
    <a href="{{ path('user_reservation_history') }}">Voir mes réservations</a>
{% endblock %}
